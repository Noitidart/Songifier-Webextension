{

	"manifest_version": 2,
	"name": "Songifier Webextension",
	"version": "1.0",

	"description": "Use your mic to identify whatever is playing",
	"icons": {
		"48": "icons/icon-48.png"
	},

	"applications": {
		"gecko": {
			"id": "songifier-webextension@mozilla.org",
			"strict_min_version": "45.0"
		}
	},

	"browser_action": {
		"default_icon": "icons/icon-32.png",
		"default_title": "Songifier",
		"default_popup": "popup/popup.html"
	},

    "background": {
      "scripts": ["background.js"]
    }

}
